if $use-spiralInUp == true
  @keyframes
    0$
      opacity: 0
      transform: translateY(500px) translateZ(1000px) rotateY(900deg) scaleY(0.8)
    50$
      opacity: 1
      transform: translateY(10px) translateZ(20px) rotateY(90deg) scaleY(0.4)
    100$
      transform: translateY(0px) translateZ(0px) rotateY(0deg)
  .spiralInUp
    transform-origin: top center
    animation-name: spiralInUp
    animation-timing-function: ease-in-out
