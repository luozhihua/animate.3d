if $use-pushInDownBig == true
  @keyframes
    0$
      opacity: 0
      transform: translateY(0 - $pp-translate-y-big) translateZ($pp-translate-z-big) rotateX($pp-rotate)
    100$
      opacity: 1
      transform: translateY(0px) translateZ(0px) rotateX(0deg)
  .pushInDownBig
    transform-origin: top
    animation-name: pushInDownBig
