if $use-turnInDown == true
  @keyframes
    0$
      opacity: 0
      transform: rotateX(-360deg) translateZ(200px) translateY(600px)
    100$
      opacity: 1
      transform: rotateX(0deg) translateZ(0px) translateY(0px)
  .turnInDown
    transform-origin: bottom center
    animation-name: turnInDown
