if $use-pullInDown == true
  @keyframes
    0$
      opacity: 0
      transform: translateY(100px) translateZ(-1000px) rotateX(90deg)
    80$
      opacity: 1
      transform: translateY(100px) translateZ(0px) rotateX(90deg)
    100$
      transform: translateY(0px) translateZ(0px) rotateX(0deg)
  .pullInDown
    transform-origin: bottom center
    animation-name: pullInDown
