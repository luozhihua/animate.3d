/////////////////////////////////////////////////////////
// Animation Default Settings                          //
/////////////////////////////////////////////////////////
// Base module settings
$base-duration = 1s
// used in 1-base module
$base-origin = top center
$base-degrees = 30deg
// used in lightspeed & special modules
$base-timing-function-in = ease-in
$base-timing-function-out = ease-out
$base-timing-function-in-out = ease-in-out
$base-distance = 10px
// used in fade, shake and bounce modules
$base-distance-big = 1000px
// used in fadeBig and bounce modules
// Push & Pull settings
$pp-translate-y = $base-distance * 5
$pp-translate-y-big = $pp-translate-y * 3
$pp-translate-x = $pp-translate-y
$pp-translate-x-big = $pp-translate-x * 10
$pp-translate-z = $base-distance * 4
$pp-translate-z-big = $pp-translate-z * 3
$pp-rotate = 10deg
$pp-rotate-big = $pp-rotate * 2
//==================================================================================================//
// Module loading                                                                                   //
//==================================================================================================//
// To include an animation module in the compiled css file, simply set it's attribute below to true //
// (all modules set to false will not be included)                                                  //
// The idea here is to only load the animations you want to use on a per project basis              //
// This helps keep the compiled css file at its leanest                                             //
//==================================================================================================//
// Hugely influenced and inspired by @csswizardry's inuit.css _vars.scss file                       //
//==================================================================================================//
// Push Enter
$use-pushIn = true
$use-pushInUp = true
$use-pushInUpBig = true
$use-pushInDown = true
$use-pushInDownBig = true
$use-pushInLeft = true
$use-pushInLeftBig = true
$use-pushInRight = true
$use-pushInRightBig = true
// Push out
$use-pushOut = true
$use-pushOutUp = true
$use-pushOutUpBig = true
$use-pushOutDown = true
$use-pushOutDownBig = true
$use-pushOutLeft = true
$use-pushOutLeftBig = true
$use-pushOutRight = true
$use-pushOutRightBig = true
// Pull In
$use-pullIn = true
$use-pullInUp = true
$use-pullInUpBig = true
$use-pullInDown = true
$use-pullInDownBig = true
$use-pullInLeft = true
$use-pullInLeftBig = true
$use-pullInRight = true
$use-pullInRightBig = true
// Pull out
$use-pullOut = true
$use-pullOutUp = true
$use-pullOutUpBig = true
$use-pullOutDown = true
$use-pullOutDownBig = true
$use-pullOutLeft = true
$use-pullOutLeftBig = true
$use-pullOutRight = true
$use-pullOutRightBig = true
// Coast in
$use-coastInBack = true
$use-coastInFront = true
$use-coastInLeft = true
$use-coastInRight = true
// Coast out
$use-coastOutBack = true
$use-coastOutFront = true
$use-coastOutLeft = true
